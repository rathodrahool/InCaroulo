{
    "name": "incaroulo",
    "version": "0.0.1",
    "description": "",
    "author": "rahul rathod",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:localhost": "export NODE_ENV=localhost && nest start --watch",
        "start:dev": "cross-env NODE_ENV=development nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "NODE_ENV=production node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "pre:commit": "npm run format && npm run lint",
        "pre:push": "npm run build",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm": "npm run build && npx typeorm -d dist/data-source.js",
        "migration:generate": "cross-env NODE_ENV=localhost && npm run typeorm -- migration:generate",
        "migration:up:localhost": "export NODE_ENV=localhost && npm run typeorm -- migration:run",
        "migration:down:localhost": "cross-env NODE_ENV=localhost && npm run typeorm -- migration:revert",
        "migration:up:development": "cross-env NODE_ENV=development && npm run typeorm -- migration:run",
        "migration:down:development": "cross-env NODE_ENV=development && npm run typeorm -- migration:revert",
        "migration:up:staging": "cross-env NODE_ENV=staging && npm run typeorm -- migration:run",
        "migration:down:staging": "cross-env NODE_ENV=staging && npm run typeorm -- migration:revert",
        "pm2:localhost": "cross-env NODE_ENV=localhost && npm run build && pm2 start dist/src/main.js -n NS",
        "pm2:start": "cross-env NODE_ENV=development && npm run build && pm2 start dist/src/main.js --name Node-skeleton -i 2",
        "pm2:reload": "cross-env NODE_ENV=development && npm run build && pm2 reload Node-skeleton",
        "pm2:production:start": "cross-env NODE_ENV=production && npm run build && pm2 start dist/src/main.js --name Node-skeleton -i 2",
        "pm2:production:reload": "cross-env NODE_ENV=production && npm run build && pm2 reload Node-skeleton"
    },
    "re-commit": "pre:commit",
    "pre-push": "pre:push",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.600.0",
        "@nestjs-modules/mailer": "^2.0.2",
        "@nestjs/bull": "^10.1.1",
        "@nestjs/common": "^10.3.9",
        "@nestjs/config": "^3.2.2",
        "@nestjs/core": "^10.3.9",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/microservices": "^10.3.9",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.3.9",
        "@nestjs/schedule": "^4.1.0",
        "@nestjs/serve-static": "^4.0.2",
        "@nestjs/swagger": "^7.3.1",
        "@nestjs/throttler": "^6.1.1",
        "@nestjs/typeorm": "^10.0.2",
        "@sendgrid/mail": "^8.1.3",
        "@types/fluent-ffmpeg": "^2.1.24",
        "@types/jest": "^29.5.12",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "connect-flash": "^0.1.1",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "express-basic-auth": "^1.2.1",
        "express-session": "^1.18.1",
        "firebase-admin": "^12.2.0",
        "fluent-ffmpeg": "^2.1.3",
        "handlebars": "^4.7.8",
        "hbs": "^4.2.0",
        "helmet": "^7.1.0",
        "joi": "^17.13.1",
        "multer": "^1.4.5-lts.1",
        "newrelic": "^11.22.0",
        "node-schedule": "^2.1.1",
        "nodemailer": "^6.9.13",
        "passport": "^0.7.0",
        "pg": "^8.12.0",
        "redis": "^4.6.14",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "twilio": "^5.2.2",
        "typeorm": "^0.3.20",
        "winston": "^3.13.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/testing": "^10.3.10",
        "@types/bcrypt": "^5.0.2",
        "@types/ejs": "^3.1.5",
        "@types/express": "^4.17.17",
        "@types/hbs": "^4.0.4",
        "@types/multer": "^1.4.12",
        "@types/node": "^20.3.1",
        "@types/nodemailer": "^6.4.15",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.5.0",
        "pre-commit": "^1.2.2",
        "pre-push": "^0.1.4",
        "prettier": "^3.0.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coveragePathIgnorePatterns": [
            "^(?!(.*\\.service\\.ts$|.*\\.controller\\.ts$|.*\\.guard\\.ts$|.*\\.pipe\\.ts$|.*\\.middleware\\.ts$)).*$",
            "src/shared"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@root/(.*)$": "<rootDir>/../$1",
            "^@shared/(.*)$": "<rootDir>/shared/$1",
            "^@modules/(.*)$": "<rootDir>/modules/$1",
            "^@pipes/(.*)$": "<rootDir>/core/pipes/$1",
            "^@filters/(.*)$": "<rootDir>/core/filters/$1",
            "^@decorators/(.*)$": "<rootDir>/core/decorators/$1",
            "^@guards/(.*)$": "<rootDir>/core/guards/$1",
            "^@middlewares/(.*)$": "<rootDir>/middlewares/$1",
            "^@config/(.*)$": "<rootDir>/config/$1"
        },
        "moduleDirectories": [
            "node_modules",
            "src"
        ]
    }
}
