<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Email Verification</title>
        <script src='https://cdn.tailwindcss.com'></script>
        <link href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet' />
    </head>
    <body class='bg-gray-100 flex justify-center items-center h-screen'>
        <!-- Main Container -->
        <div class='bg-white p-8 rounded-lg shadow-lg text-center w-full max-w-md'>
            <h1 class='text-2xl font-bold text-gray-700 mb-6'>Verify Your Email</h1>
            <p class='text-gray-600 mb-8'>
                We've sent a link to your email. Please check your inbox.
            </p>

            <!-- Gmail Button -->
            <button
                class='bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg flex items-center justify-center hover:bg-green-600 transition duration-300 w-full'
                onclick="window.open('https://mail.google.com', '_blank')"
            >
                <span class='material-icons mr-2'> email </span>
                Open Gmail Inbox
            </button>

            <!-- Message for checking spam/junk folder -->
            <p class='text-gray-600 mt-4'>
                Didn't receive the email? Check your spam or junk folder.
            </p>
        </div>
    </body>
</html>