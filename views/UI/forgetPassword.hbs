<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Forgot Password - Social Media Carousel Creator</title>
        <script src='https://cdn.tailwindcss.com'></script>
    </head>
    <body class='bg-gray-100'>
        <div class='flex items-center justify-center min-h-screen bg-gray-100'>
            <div class='bg-white p-8 rounded-lg shadow-lg w-full max-w-md'>
                <h2 class='text-2xl font-semibold text-gray-700 text-center mb-6'>
                    Forgot Your Password
                </h2>

                <p class='text-center text-gray-600 mb-6'>
                    Enter your email address and weâ€™ll send you a link to reset your password.
                </p>

                <!-- Forgot Password Form -->
                <form action='#' method='POST'>
                    <!-- Email Address -->
                    <div class='mb-6'>
                        <label class='block text-gray-600 font-semibold mb-2' for='email'>Email Address</label>
                        <input
                            type='email'
                            id='email'
                            class='w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400'
                            placeholder='Enter your email'
                            required
                        />
                    </div>

                    <!-- Send Reset Link Button -->
                    <div>
                        <button
                            type='submit'
                            class='w-full bg-green-500 text-white px-6 py-2 rounded-lg shadow-lg hover:bg-green-600 transition duration-300'
                        >
                            Send Reset Link
                        </button>
                    </div>
                </form>

                <!-- Back to Login -->
                <p class='text-center text-blue-600 mt-6'>
                    <a href='login' class='text-blue-6 hover:underline'>Back to Login</a>
                </p>

            </div>
        </div>
    </body>
</html>